{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": false,
        "target": "es5",
        "outDir": "./spec/js",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "include": [
        "spec/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}